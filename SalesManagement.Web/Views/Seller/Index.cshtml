@model IEnumerable<SalesManagement.BusinessLayer.Models.SellerModel>

@{
    ViewData["Title"] = "Index";
}




<h4>List Of Sellers</h4>
<hr />
<br />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="sellersTbl" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commission)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commission)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SellerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SellerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SellerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(function () {
        $("#sellersTbl").dataTable();
    });

</script>
